extends layout 

block content 

  h1.text-3xl=title
  h2.text-2xl.pb-4 $#{item.price_formatted}
  .container
    h3 Category: #{item.category.name}
    h3 Total in stock: #{item.number_in_stock}
    p= item.description 
  div(class='flex gap-2')
    a(href=`${item.url}/update` class='p-2 border-2 border-cyan-800 rounded') Update
    a(href=`${item.url}/delete` class='p-2 border-2 border-cyan-800 rounded') Delete
